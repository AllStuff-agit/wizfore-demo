{
  // ✅ Next.js 기본 ESLint 설정 + TypeScript 지원
  "extends": [
    "next/core-web-vitals",     // 성능 및 접근성에 초점을 맞춘 Next.js 권장 규칙
    "next/typescript"           // TypeScript 프로젝트용 기본 설정
  ],

  // ✅ 규칙 커스터마이징
  "rules": {
    "react/no-unescaped-entities": "off", // JSX 내 ' '나 & 같은 특수문자 허용
    "react/react-in-jsx-scope": "off",    // React import 생략 허용 (Next.js는 자동 import)
    "@next/next/no-img-element": "off",   // <img> 허용 (Next는 <Image> 권장하나 무시)
    "@next/next/no-html-link-for-pages": "off", // <a href=""> 직접 사용 허용
    "no-unused-vars": "warn",             // JS에서 사용되지 않는 변수는 경고만
    "@typescript-eslint/no-unused-vars": [
      "warn",                             // TypeScript에서도 사용 안 된 변수 경고
      { "argsIgnorePattern": "^_" }       // 단, _로 시작하는 함수 파라미터는 무시
    ],
    "@typescript-eslint/explicit-module-boundary-types": "off" // 함수의 반환 타입 생략 허용
  },

  // ✅ TypeScript 파일에만 적용되는 별도 설정
  "overrides": [
    {
      "files": ["*.ts", "*.tsx"],         // .ts/.tsx 파일에만 해당
      "parser": "@typescript-eslint/parser", // TypeScript 코드 파싱용 전용 파서
      "parserOptions": {
        "project": "./tsconfig.json",     // 타입 검사에 사용할 tsconfig 경로
        "tsconfigRootDir": "./",
        "sourceType": "module"
      },
      "plugins": ["@typescript-eslint"],  // TypeScript용 ESLint 플러그인
      "extends": [
        "plugin:@typescript-eslint/recommended",                  // 기본 TypeScript 권장 규칙
        "plugin:@typescript-eslint/recommended-requiring-type-checking" // 타입 체크 필요 규칙 포함
      ],
      "rules": {
        "@typescript-eslint/no-explicit-any": "warn",     // any 타입 사용 시 경고
        "@typescript-eslint/no-non-null-assertion": "warn" // 느낌표 (!) 강제 non-null 사용 시 경고
      }
    }
  ],

  // ✅ 코드가 실행될 환경 지정
  "env": {
    "browser": true,  // 브라우저 내 코드 실행 허용
    "es2021": true,   // 최신 JS 문법 지원
    "node": true      // Node.js에서도 실행 가능
  },

  // ✅ 구문 분석 옵션
  "parserOptions": {
    "ecmaVersion": 12,      // ES12 (2021) 문법 지원
    "sourceType": "module", // ES 모듈(import/export) 사용 가능
    "ecmaFeatures": {
      "jsx": true           // JSX 문법 지원 (React용)
    }
  },

  // ✅ React 자동 버전 감지 설정
  "settings": {
    "react": {
      "version": "detect" // 설치된 React 버전 자동으로 감지
    }
  },

  // ✅ ESLint가 무시할 파일 및 폴더 목록
  "ignorePatterns": [
    "node_modules/", ".next/", "out/", "dist/", "build/", "coverage/", "public/", "scripts/", "cypress/",
    // 설정 파일 및 빌드 구성 관련 무시
    "jest.config.js", "babel.config.js", "webpack.config.js", "postcss.config.js", "tailwind.config.js",
    "next.config.js", "eslint.config.js", "tsconfig.json", "tsconfig.*.json",
    // 패키지 관련 파일 무시
    "package.json", "yarn.lock", "package-lock.json", "pnpm-lock.yaml", "pnpm-workspace.yaml", "pnpmfile.js",
    // 문서 및 라이선스 파일 무시
    "README.md", "CHANGELOG.md", "LICENSE", "LICENSE.txt", "LICENSE.md", "CONTRIBUTING.md", "CODE_OF_CONDUCT.md", "SECURITY.md",
    // Docker, Makefile 등 DevOps 관련 무시
    "Dockerfile", "docker-compose.yml", "docker-compose.*.yml", "Makefile", "Makefile.*",
    // 기타 빌드 도구 설정 무시
    "gulpfile.js", "Gruntfile.js", "rollup.config.js", "vite.config.js",
    "webpack.*.config.js", "babel.*.config.js", "postcss.*.config.js", "tailwind.*.config.js",
    "next.*.config.js", "eslint.*.config.js", "jest.*.config.js", "cypress.*.config.js",
    // Cypress 테스트 관련 파일 모두 무시
    "cypress.config.js", "cypress.env.json", "cypress.json",
    "cypress/support/index.js", "cypress/integration/**/*.js", "cypress/fixtures/**/*.json", "cypress/plugins/**/*.js", "cypress/support/**/*.js",
    "cypress/commands.js", "cypress/index.js", "cypress/plugins/index.js",
    "cypress/support/index.ts", "cypress/integration/**/*.ts", "cypress/plugins/**/*.ts", "cypress/support/**/*.ts",
    "cypress/commands.ts", "cypress/index.ts", "cypress/plugins/index.ts"
  ]
}
